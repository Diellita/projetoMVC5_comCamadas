
@model WebApplicationMVC.ModelsViewData.LoginViewData

<div class="containerLgn">
    <div class="row">
        <div class="login">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="row">
                            <div class="image">
                                <img src="~/assets/images/logo.jpg" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="row">
                            <form action="@Url.Action("LoginUsuario","Login")" method="post" class="formulario">
                                <h1 class="text-center"> Fazer Login</h1>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"></label>
                                    <i class="fas fa-envelope"></i>
                                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"></label>
                                    <i class="fas fa-lock"></i>
                                    <input type="password" class="form-control" name="senha" id="exampleInputPassword1" placeholder="Senha">
                                </div>
                                <div class="btn-login">
                                    <button type="submit" class="btn btn-primary">LOGIN</button>
                                </div>
                                <div class="creat">
                                    <a href="#">Esqueci Usuário/Senha</a>
                                    <a href="#">Crie Sua Conta</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>